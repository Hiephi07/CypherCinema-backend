{
    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "example": "newuser@gmail.boom.com"
                                    },
                                    "password": {
                                        "example": "Motden8@"
                                    },
                                    "fullname": {
                                        "example": "Tran Van A"
                                    },
                                    "phone_number": {
                                        "example": "0987654321"
                                    },
                                    "gender": {
                                        "example": "male"
                                    },
                                    "birthday": {
                                        "example": "2000-01-01"
                                    },
                                    "city": {
                                        "example": 30
                                    }
                                },
                                "required": ["email", "password", "fullname", "phone_number", "gender", "birthday", "city"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "New user created successfully!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "example": true
                                        },
                                        "data": {
                                            "example": {
                                                "email": "newuser@gmail.boom.com"
                                            }
                                        },
                                        "msg": {
                                            "example": "New user created successfully!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "New user created failed!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": false,
                                            "example": false
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": "Email đã tồn tại. Hãy thử lại với email khác!"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },


        "/api/banners": {
            "get": {
                "tags": [
                    "Banners"
                ],
                "summary": "Get list of banners",
                "operationId": "getBannerList",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "example": [
                                                {
                                                    "id": 1,
                                                    "image_url": "https://www.bhdstar.vn/wp-content/uploads/2024/07/Banner-Web-BHD_Milk.jpg",
                                                    "type": "main"
                                                },
                                                {
                                                    "id": 2,
                                                    "image_url": "https://www.bhdstar.vn/wp-content/uploads/2024/07/Banner-Web-BHD_Milk2.jpg",
                                                    "type": "sub"
                                                }
                                            ]
                                        },
                                        "msg": {
                                            "type": "string",
                                            "example": "Lấy danh sách banner thành công"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },

            "post": {
                "tags": [
                    "Banners"
                ],
                "summary": "Create a new banner",
                "operationId": "createBanner",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Tải ảnh banner lên server."
                                    }
                                },
                                "required": ["file"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Tải ảnh lên thành công.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "string",
                                            "example": "uploaded-file.jpg"
                                        },
                                        "msg": {
                                            "type": "string",
                                            "example": "Tải ảnh lên thành công."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Dữ liệu đầu vào không hợp lệ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "file": {
                                                    "type": "array",
                                                    "example": [
                                                        "Bạn chưa chọn file ảnh để tải lên.",
                                                        "Vui lòng chọn file đúng định dạng ảnh như png, jpeg, jpg, jfif.",
                                                        "Kích thước ảnh quá lớn, vui lòng chọn ảnh < 5MB."
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/banners/?type={type_name}": {
            "get": {
                "tags": [
                    "Banners"
                ],
                "summary": "Get a banner by TYPE",
                "operationId": "getBannerByType",
                "parameters": [
                    {
                        "name": "type_name",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Loại banner cần tìm"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get list of banners",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "example": [
                                                {
                                                    "id": 1,
                                                    "image_url": "https://www.bhdstar.vn/wp-content/uploads/2024/07/Banner-Web-BHD_Milk.jpg",
                                                    "type": "main"
                                                },
                                                {
                                                    "id": 2,
                                                    "image_url": "https://www.bhdstar.vn/wp-content/uploads/2024/07/Banner-Web-BHD_Milk3.jpg",
                                                    "type": "main"
                                                }
                                            ]
                                        },
                                        "msg": {
                                            "example": "Lấy main banner thành công."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/banners/{id}": {
            "delete": {
                "tags": [
                    "Banners"
                ],
                "summary": "Delete a banner",
                "operationId": "deleteBanner",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID của banner cần xóa"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Banner đã được xóa thành công.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": null,
                                            "example": null
                                        },
                                        "msg": {
                                            "type": "string",
                                            "example": "Banner đã được xóa thành công."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Không tìm thấy banner",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "status": {
                                                    "type": "boolean",
                                                    "example": false
                                                },
                                                "id": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Không tìm thấy ID của banner."
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },


        "/api/vouchers": {
            "get": {
                "tags": [
                    "Vouchers"
                ],
                "summary": "Get list of vouchers",
                "operationId": "getVoucherList",
                "responses": {
                    "200": {
                        "description": "A list with vouchers"
                    }
                }
            },
            "post": {
                "tags": [
                    "Vouchers"
                ],
                "summary": "Create a new voucher",
                "operationId": "createVoucher",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Discount Voucher"
                                    },
                                    "discount": {
                                        "type": "integer",
                                        "example": 10
                                    }
                                },
                                "required": ["name", "discount"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Voucher created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "12345"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Discount Voucher"
                                        },
                                        "discount": {
                                            "type": "integer",
                                            "example": 10
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Dữ liệu đầu vào không hợp lệ"
                    }
                }
            }
        },
        "/api/vouchers/{id}": {
            "get": {
                "tags": [
                    "Vouchers"
                ],
                "summary": "Get a single voucher by ID",
                "operationId": "getVoucherById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A single voucher",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "discount": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Voucher not found"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication User"
        },
        {
            "name": "Banners",
            "description": "Banners"
        },
        {
            "name": "Vouchers",
            "description": "Vouchers"
        }
    ]
}
